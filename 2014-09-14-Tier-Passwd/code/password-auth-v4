auth        required                                     pam_env.so
auth        required                                     pam_faildelay.so delay=2000000
auth        required                                     pam_faillock.so preauth silent                         {include if "with-faillock"}
auth        sufficient                                   pam_unix.so {if not "without-nullok":nullok}
auth        required                                     pam_faillock.so authfail                               {include if "with-faillock"}
auth        required                                     pam_deny.so

account     required                                     pam_access.so                                          {include if "with-pamaccess"}
account     required                                     pam_faillock.so                                        {include if "with-faillock"}
account     required                                     pam_unix.so

########################################
# PASSWORD (password changes)
########################################

# --- rf_guns branch ---
password    [success=1 default=3] pam_succeed_if.so user ingroup rf_guns use_uid
password    requisite   pam_pwquality.so retry=3 minlen=12 dcredit=-1 ucredit=-1 lcredit=-1 ocredit=-1 \
                                        difok=3 maxrepeat=3 maxclassrepeat=3 enforce_for_root
password    required    pam_pwhistory.so remember=24 enforce_for_root use_authtok

# --- app_users branch ---
password    [success=1 default=3] pam_succeed_if.so user ingroup app_users use_uid
password    requisite   pam_pwquality.so retry=3 minlen=14 dcredit=-1 ucredit=-1 lcredit=-1 ocredit=-1 \
                                        difok=4 maxrepeat=3 maxclassrepeat=3 enforce_for_root
password    required    pam_pwhistory.so remember=36 enforce_for_root use_authtok

# --- app_devs branch ---
password    [success=1 default=3] pam_succeed_if.so user ingroup app_devs use_uid
password    requisite   pam_pwquality.so retry=3 minlen=16 dcredit=-1 ucredit=-1 lcredit=-1 ocredit=-1 \
                                        difok=5 maxrepeat=2 maxclassrepeat=2 enforce_for_root
password    required    pam_pwhistory.so remember=48 enforce_for_root use_authtok

# Final apply
password    sufficient  pam_unix.so sha512 shadow {if not "without-nullok":nullok} use_authtok
password    required    pam_deny.so



